  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body class="Head_nav">
  <td><!--상단 메뉴 인클루드--><% include ./top.ejs %></td>
  <div class="row">
    <td><% include ./userside.ejs %></td>
    <div class="col-9">
      <div class="jumbotron">
        <h1>My Page</h1>
        <p>주문정보조회</p>
      </div>
      <div class="well"><h2>주문목록</h2></div>
      <div class="container" style="margin: 20px 0px 20px 200px;">
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>분류</th>
              <th>상품명</th>
              <th>가격</th>
              <th>수량</th>
              <th>판매량</th>
            </tr>
            <% for(var i=0; i< rows.length; i++){ %>
            <tr>
                <% switch(rows[i].category){
                  case 1:%><th>런닝머신</th>
                <%break;

                case 2:%><th>싸이클</th>
                <%break;
                case 3:%><th>보충제</th>
                <%break;
                case 4:%><th>보호대</th>
                <%break;
                    default:break;
                }%>
              <td><%=rows[i].category%></td>
              <td class="font-weight-bold"><a href="/list/read/<%=rows[i].code%>"><%=rows[i].name%></a></td>
              <td><%=rows[i].price%></td>
              <td><%=rows[i].amount%></td>
              <td><%=rows[i].sales%></td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </body>

  </html>